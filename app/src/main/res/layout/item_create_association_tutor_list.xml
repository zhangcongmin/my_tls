<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/divide_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_gray_bg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingEnd="10dp"
        android:paddingStart="15dp"
        android:paddingTop="8dp">

        <cn.talianshe.android.widget.ScaleImageView
            android:id="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_head"
            app:scale="1" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="某某某"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="叫兽/易小星"
                android:textColor="@color/gray"
                android:textSize="13sp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_set_leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/gou_green_selector"
            android:paddingStart="3dp"
            android:text="@string/association_set_tutor_leader"
            android:clickable="false"
            android:textColor="@color/association_create_set_tutor_leader_selector"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>
