<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="62dp"
            android:layout_marginStart="62dp"
            android:orientation="horizontal">

            <cn.talianshe.android.widget.UnderlineBtn
                android:id="@+id/btn_association_follow"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="39dp"
                android:layout_weight="1"
                app:checkedColor="@color/theme_color"
                app:isChecked="true"
                app:lineHeight="1.5dp"
                app:text="@string/association_follow"
                app:textSize="15sp"
                app:unCheckedColor="@color/gray" />

            <cn.talianshe.android.widget.UnderlineBtn
                android:id="@+id/btn_association_jion"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="39dp"
                android:layout_weight="1"
                app:checkedColor="@color/theme_color"
                app:isChecked="false"
                app:lineHeight="1.5dp"
                app:text="@string/association_jion"
                app:unCheckedColor="@color/gray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/divide_color" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_association"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>