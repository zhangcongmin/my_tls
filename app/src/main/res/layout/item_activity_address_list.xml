<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/divide_color"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_gray_bg_selector"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:gravity="center_vertical"
        android:paddingTop="20dp">

        <cn.talianshe.android.widget.ScaleImageView
            android:id="@+id/iv_address"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/all_association"
            app:scale="1"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="外国语学院国画社团"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/area_indoor"
                    android:text="@string/in_door"
                    android:textSize="10sp"
                    android:textColor="#FF7435" />

            </LinearLayout>



            <cn.talianshe.android.widget.LocationIconTextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:textColor="@color/gray"
                android:textSize="13sp" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
