<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_mine_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_gray_bg_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <cn.talianshe.android.widget.ScaleImageView
                android:id="@+id/iv_head"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@mipmap/default_head"
                android:scaleType="centerCrop"
                app:scale="1" />

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_head"
                android:layout_alignEnd="@id/iv_head"
                android:src="@mipmap/male"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/unlogin"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/login_tls"
                android:textColor="@color/gray"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@mipmap/mine_top_bg" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_gray_bg_selector"
        android:clickable="true"
        android:drawableEnd="@mipmap/more"
        android:drawablePadding="6dp"
        android:drawableStart="@mipmap/mine_message"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/my_message"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_color" />

    <TextView
        android:id="@+id/tv_my_association"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_gray_bg_selector"
        android:clickable="true"
        android:drawableEnd="@mipmap/more"
        android:drawablePadding="6dp"
        android:drawableStart="@mipmap/mine_association"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/my_association"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_color" />
    <TextView
        android:id="@+id/tv_my_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_gray_bg_selector"
        android:clickable="true"
        android:drawableEnd="@mipmap/more"
        android:drawablePadding="6dp"
        android:drawableStart="@mipmap/mine_activity"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/my_activity"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/btn_exit_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_gray_bg_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/exit_account"
        android:textColor="@color/theme_color"
        android:textSize="15sp" />
</LinearLayout>
