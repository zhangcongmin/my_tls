<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="21dp"
    android:paddingStart="21dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sign_code_bg"
            android:gravity="center"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="@string/sign_mode_code"
            android:textColor="@color/sign_code_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-1dp"
            android:layout_marginStart="-1dp"
            android:layout_weight="1"
            android:background="@drawable/sign_code_bg"
            android:gravity="center"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="@string/sign_mode_scan"
            android:textColor="@color/sign_code_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_gesture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sign_code_bg"
            android:gravity="center"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="@string/sign_mode_gesture"
            android:textColor="@color/sign_code_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <cn.talianshe.android.widget.FixedEditText
        android:id="@+id/et_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_desc_bg"
        android:gravity="top"
        android:maxLines="7"
        android:minLines="7"
        android:padding="10dp"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_theme_bg"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>